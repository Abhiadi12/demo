<%= render './layouts/messages'%>
<div class="container signup-container">
    <div class="row text-white">
        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
            <h1 class="display-4 py-2 text-truncate" style="color:red">Login</h1>
                <div class="px-2">
                    <%= form_for(:session, :html => {class: "justify-content-center signup", role: "form",url:login_path}) do |form| %>
                        <div class="form-group">     
                           <%= form.email_field :email , class: "form-control", placeholder:"Enter Email",autofocus:true%>
                        </div>
                        <div class="form-group">
                            <%= form.password_field :password , class: "form-control", placeholder:"Password",autofocus:true%>
                        </div>
                         <%= form.submit "Login",class: 'btn btn-primary btn-lg' %>
                    <% end %>
                    <%= link_to "Don't have an account ?",signup_path%><br>
                    <%= link_to "Forgot Password",change_password_path%>
                </div>
            </div>
    </div>
</div>