<% if obj.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4 class="alert-heading">Can't proceed!</h4>
  <p><%= pluralize(obj.errors.count, "error") %>
    prohibited this article from being saved:</p>
<ul>
    <% obj.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
  <hr>
  <p class="mb-0">Please enter valid input details</p>
</div>
<% end %>